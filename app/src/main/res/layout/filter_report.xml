<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layoutfromdate"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/fromdate"
            android:layout_toRightOf="@id/txtfromdate"
            android:layout_width="38dp"
            android:layout_height="58dp"
            android:src="@drawable/ic_date_range"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/txtfromdate"
            android:paddingTop="10dp"
            android:paddingBottom="0dp"
            android:gravity="left"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="From Date"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layouttodate"
        android:layout_toRightOf="@id/layoutfromdate"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/todate"
            android:layout_width="38dp"
            android:layout_height="58dp"
            android:src="@drawable/ic_date_range"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/txttodate"
            android:paddingTop="10dp"
            android:paddingBottom="0dp"
            android:gravity="left"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="To Date"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layoutmtype"
        android:layout_below="@id/layoutfromdate"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtmtype"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:gravity="left"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Milk Type"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/spinnermtype"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtshift"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:gravity="left"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Shift"/>
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/spinnershift"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layoutfcode"
        android:layout_below="@id/layoutmtype"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/farmerid"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="Farmer ID"
            android:inputType="number"
            android:maxLength="3"
            android:gravity="center"
            android:textStyle="bold"
            android:imeOptions="actionNext"
            android:background="@drawable/border"
            />
        <TextView
            android:id="@+id/fname"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border"
            android:gravity="center_horizontal"
            android:hint="Farmer Name"
            android:textColor="@color/colourPrimary"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layoutapply"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_alignParentRight="true">
        <Button
            android:id="@+id/apply"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_weight=".30"
            android:textStyle="bold"
            android:text="Apply"
            android:layout_width="match_parent" />
    </LinearLayout>
</RelativeLayout>