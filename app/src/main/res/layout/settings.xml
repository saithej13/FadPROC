<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/sms"
        android:padding="10dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        tools:ignore="MissingConstraints">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_whatsapp"
            android:layout_alignParentLeft="true"
            android:id="@+id/icwhatsapp"
            />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_message"
            android:layout_alignParentLeft="true"
            android:id="@+id/icmessage"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textmtype"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="left"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Message"/>
        <Spinner
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:gravity="center"
            android:textAlignment="center"
            android:id="@+id/spinnermessage"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/printer"
        android:padding="10dp"
        android:gravity="center"
        android:layout_below="@+id/sms"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        tools:ignore="MissingConstraints">
<ImageView
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:src="@drawable/ic_print"
    android:background="@color/colourPrimary"
    android:layout_alignParentLeft="true"
    android:id="@+id/icprinter"
    />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Printer"
        android:id="@+id/txtprinter"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/colourPrimary"
        android:textSize="25dp"
        android:layout_toRightOf="@+id/icprinter" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/analyzer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/printer"
        android:background="@drawable/border"
        android:gravity="center"
        android:padding="10dp">

        <ImageView
            android:id="@+id/icanalyser"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:background="@color/colourPrimary"
            android:src="@drawable/milkanalyser" />

        <TextView
            android:id="@+id/txtanlyser"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/icanalyser"
            android:gravity="center"
            android:text="Analyser"
            android:textColor="@color/colourPrimary"
            android:textSize="25dp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/analyzer"
        android:background="@drawable/border"
        android:padding="10dp"
        android:gravity="center"
        android:id="@+id/wscale">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/wscale"
            android:background="@color/colourPrimary"
            android:layout_alignParentLeft="true"
            android:id="@+id/icwscale"
            />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Weighing Scale"
            android:id="@+id/txtwscale"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/colourPrimary"
            android:textSize="25dp"
            android:layout_toRightOf="@+id/icanalyser" />
    </LinearLayout>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Printer"
        android:id="@+id/lblprinter"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/colourPrimary"
        android:textSize="25dp"
        android:layout_below="@id/wscale" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/connect"
        android:layout_below="@id/lblprinter"
        android:text="Connect"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/print"
        android:layout_below="@id/lblprinter"
        android:layout_toRightOf="@id/connect"
        android:text="Print"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/disconnect"
        android:layout_below="@id/lblprinter"
        android:layout_toRightOf="@id/print"
        android:text="disconnect"
        />

</RelativeLayout>