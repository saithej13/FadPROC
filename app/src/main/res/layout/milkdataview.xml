<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/layoutsubtotal"
            android:id="@+id/layoutlistview">

            <ListView
                android:id="@+id/listview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start" />
        </LinearLayout>
        <!--<DatePicker android:id="@+id/datePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Textvv"/>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_above="@+id/layoutsave"
            android:layout_alignParentBottom="true"
            android:gravity="left"
            android:id="@+id/layoutsubtotal"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:background="@drawable/border"
                android:id="@+id/layoutqtysubtotal"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textsubtotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:gravity="left"
                    android:maxLength="30"
                    android:text="Qty  :"
                    android:textStyle="bold"
                    android:textColor="@color/colourPrimary"
                    android:textSize="14sp"
                    android:layout_marginStart="0dp"
                    tools:ignore="RtlHardcoded" />
                <TextView
                    android:id="@+id/subtotal"
                    android:layout_width="60dp"
                    android:layout_height="25dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:maxLength="30"
                    android:text="0.0"
                    android:textColor="@color/colourPrimary"
                    android:textSize="16sp"
                    tools:ignore="RtlHardcoded" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:background="@drawable/border"
                android:id="@+id/layoutfatsubtotal"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textfat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:gravity="left"
                    android:maxLength="30"
                    android:text="FAT% :"
                    android:textStyle="bold"
                    android:textColor="@color/colourPrimary"
                    android:textSize="14sp"
                    android:layout_marginStart="0dp"
                    tools:ignore="RtlHardcoded" />
                <TextView
                    android:id="@+id/avgfat"
                    android:layout_width="60dp"
                    android:layout_height="25dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:maxLength="3"
                    android:text="0.0"
                    android:textColor="@color/colourPrimary"
                    android:textSize="16sp"
                    tools:ignore="RtlHardcoded" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:background="@drawable/border"
                android:id="@+id/layoutsnfsubtotal"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textsnf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:gravity="left"
                    android:maxLength="7"
                    android:text="SNF% :"
                    android:textColor="@color/colourPrimary"
                    android:textSize="14sp"
                    android:layout_marginStart="0dp"
                    tools:ignore="RtlHardcoded" />
                <TextView
                    android:id="@+id/avgsnf"
                    android:layout_width="60dp"
                    android:layout_height="25dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:maxLength="3"
                    android:text="0.0"
                    android:textColor="@color/colourPrimary"
                    android:textSize="16sp"
                    tools:ignore="RtlHardcoded" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:background="@drawable/border"
                android:id="@+id/layoutamtsubtotal"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/texttotalamt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:gravity="left"
                    android:maxLength="30"
                    android:text="Amt  :"
                    android:textStyle="bold"
                    android:textColor="@color/colourPrimary"
                    android:textSize="14sp"
                    android:layout_marginStart="0dp"
                    tools:ignore="RtlHardcoded" />
                <TextView
                    android:id="@+id/totalamt"
                    android:layout_width="fill_parent"
                    android:layout_height="25dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:maxLength="30"
                    android:text="0.0"
                    android:textColor="@color/colourPrimary"
                    android:textSize="16sp"
                    tools:ignore="RtlHardcoded" />
            </LinearLayout></LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>