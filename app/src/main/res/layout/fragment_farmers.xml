<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layoutcode"
        android:orientation="horizontal"
        android:background="@drawable/border">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtslno"
            android:visibility="invisible"
            android:textColor="@color/colourPrimary"
            android:gravity="left"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="slno"/>
    <TextView
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:id="@+id/textcode"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:gravity="left"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Code"/>
    <EditText
        android:id="@+id/farmerid"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:textColor="@color/colourPrimary"
        android:hint="Farmer Code"
        android:inputType="number"
        android:gravity="center"
        android:textStyle="bold"
        android:background="@null"
        android:imeOptions="actionNext"

        /></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutcode"
        android:id="@+id/layoutfname"
        android:background="@drawable/border"
        android:orientation="horizontal">
        <TextView
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:id="@+id/textfname"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:gravity="left"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="First Name "/>
        <EditText
            android:id="@+id/fname"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:textColor="@color/colourPrimary"
            android:hint="First Name"
            android:inputType="text"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@null"
            android:imeOptions="actionNext"
            /></LinearLayout>
    <!--<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutfname"
        android:id="@+id/layoutlname"
        android:background="@drawable/border"
        android:orientation="horizontal">
        <TextView
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:id="@+id/textlname"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:gravity="left"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Last Name"/>
        <EditText
            android:id="@+id/lname"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:textColor="@color/colourPrimary"
            android:hint="Last Name"
            android:inputType="text"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@null"
            android:imeOptions="actionNext"
            /></LinearLayout>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutfname"
        android:id="@+id/layoutmno"
        android:background="@drawable/border"
        android:orientation="horizontal">
        <TextView
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:id="@+id/textmno"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:gravity="left"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Mobile NO."/>
        <EditText
            android:id="@+id/mno"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:textColor="@color/colourPrimary"
            android:hint="Mobile NO."
            android:inputType="number"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@null"
            android:imeOptions="actionNext"
            /></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutmno"
        android:id="@+id/layoutmtype"
        android:background="@drawable/border"
        android:orientation="horizontal">
        <TextView
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:id="@+id/textmtype"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:gravity="left"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Milk Type"/>
    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textAlignment="center"
        android:id="@+id/spinnermtype"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutmtype"
        android:id="@+id/layoutactive"
        android:background="@drawable/border"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textactive"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:text="Active"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Switch
            android:id="@+id/switchactive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="150dp"
            android:gravity="center"
            tools:ignore="UseSwitchCompatOrMaterialXml" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="left"
        android:id="@+id/layoutsave"
        android:orientation="horizontal">
        <Button
            android:id="@+id/save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Save"/>
    </LinearLayout>
</RelativeLayout>